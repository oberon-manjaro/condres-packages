# Maintainer: Condres OS team <info@codelinsoft.it>

pkgname=calamares
pkgver=3.2.0
pkgrel=10
epoch=2
options=(staticlibs)
pkgdesc='Distribution-independent installer framework'
arch=('any')
license=(GPL)
url="https://github.com/calamares"
license=('LGPL')
depends=('kconfig' 'kcoreaddons' 'ki18n' 'solid' 'yaml-cpp' 'kpmcore' 'mkinitcpio-openswap' 'dmidecode' 'libpwquality'
         'boost-libs' 'hwinfo' 'qt5-svg' 'polkit-qt5' 'gptfdisk' 'gtk-update-icon-cache' 'rsync' 'squashfs-tools' 'kcrash')
makedepends=('extra-cmake-modules' 'qt5-tools' 'git' 'boost')
backup=('usr/share/calamares/modules/bootloader.conf'
        'usr/share/calamares/modules/displaymanager.conf'
        'usr/share/calamares/modules/initcpio.conf'
        'usr/share/calamares/modules/unpackfs.conf')


source+=("https://github.com/calamares/calamares/releases/download/v3.2.0/calamares-3.2.0.tar.gz"
         https://codelinsoft.it/updates/calamares-condres.tar.gz)

sha256sums=('SKIP'
            'SKIP')

prepare() {
    bsdtar xvzf calamares-condres.tar.gz
    cp -a ${srcdir}/calamares-condres/* ${srcdir}/calamares-3.2.0
    rm -rf ${srcdir}/calamares-condres
    cd ${srcdir}/calamares-3.2.0
}


build() {
    cd ${srcdir}/calamares-3.2.0

    mkdir -p build
    cd build
        cmake .. \
              -DCMAKE_BUILD_TYPE=Release \
              -DCMAKE_INSTALL_PREFIX=/usr \
              -DCMAKE_INSTALL_LIBDIR=lib \
              -DSKIP_MODULES="webview interactiveterminal initramfs dracut packages"
        make
}

package() {
    cd ${srcdir}/calamares-3.2.0/build
    make DESTDIR="$pkgdir" install
    install -Dm644 "../calamares.desktop" "$pkgdir/usr/share/applications/calamares.desktop"
    install -Dm644 "../calamares.png" "$pkgdir/usr/share/icons/calamares.png"
	install -Dm755 "../data/calamares_polkit" "$pkgdir/usr/bin/calamares_polkit"
    install -Dm644 "../data/49-nopasswd-calamares.rules" "$pkgdir/etc/polkit-1/rules.d/49-nopasswd-calamares.rules"
    chmod 750 "$pkgdir"/etc/polkit-1/rules.d
    rm -r "$pkgdir/usr/lib/calamares/modules/dummyprocess/"
    rm -r "$pkgdir/usr/lib/calamares/modules/dummypython/"
    rm "$pkgdir/usr/share/calamares/modules/dummypython.conf"
}

