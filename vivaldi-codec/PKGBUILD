# Maintainer: Condres OS team <info@codelinsoft.it>

pkgname=vivaldi-codecs-ffmpeg
pkgver=63.0.3239.108
pkgrel=1388
pkgdesc="Prebuilt ffmpeg-codecs package for vivaldi"
arch=(
  "x86_64"
)
url="https://packages.ubuntu.com/zesty/amd64/chromium-codecs-ffmpeg-extra/download"
license=('LGPL')
depends=('vivaldi')
provides=(
  'vivaldi-ffmpeg-codecs-extra-bin'
)
conflicts=(
  'vivaldi-ffmpeg-codecs-extra-bin'
)
source=(
  "http://security.ubuntu.com/ubuntu/pool/universe/c/chromium-browser/chromium-codecs-ffmpeg_63.0.3239.108-0ubuntu1_amd64.deb"
)
md5sums=(
  "SKIP"
)
install=vivaldi-codecs-ffmpeg.install

prepare() {
  cd "$srcdir"
  tar -xJf data.tar.xz
}

package() {
  cd "$srcdir"
  mkdir -p "$pkgdir/usr/share/vivaldi-codecs"
  cp "$srcdir/usr/lib/chromium-browser/libffmpeg.so" "$pkgdir/usr/share/vivaldi-codecs/libffmpeg.so"
}

