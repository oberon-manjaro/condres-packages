post_install() {
  glib-compile-schemas usr/share/glib-2.0/schemas
  echo "==============================================================="
  echo "To use the extension:"
  echo " * Restart GNOME Shell ([Alt]+[F2], r)"
  echo " * Activate it (eg using gnome-tweak-tool)"
  echo "==============================================================="
}

post_upgrade() {
  post_install $1
}

post_remove() {
  post_install $1
}

