pkgname=tde-style-lipstik
pkgver=14.0.4
pkgrel=1
pkgdesc="Trinity lipstik theme"
arch=('i686' 'x86_64')
url='http://scm.trinitydesktop.org/scm/git/arts'
license=('GPL')
groups=('tde-core' 'tde-base')
depends=('alsa-plugins'
	'alsa-tools'
	'alsa-utils'
	'audiofile'
	'glib2'
	'libmad'
	'libogg'
	'libvorbis'
	'pulseaudio-alsa'
	'tde-tqtinterface')
makedepends=('pkgconfig' 'cmake')
source=("http://ftp.fau.de/trinity/releases/R14.0.4/applications/tde-style-lipstik-R14.0.4.tar.bz2")
md5sums=('SKIP')

build() {
   cd $srcdir/applications/tde-style-lipstik
   cp -Rp /usr/share/aclocal/libtool.m4 admin/libtool.m4.in
   cp -Rp /usr/share/libtool/build-aux/ltmain.sh admin/ltmain.sh
   make -f admin/Makefile.common

   CFLAGS=$CPUOPT \
 CXXFLAGS=$CPUOPT \
 ./configure \
   --prefix=${PREFIX} \
   --sysconfdir=${SYSCONFDIR} \
   --libdir=${LIBDIR} \
   --mandir=${MANDIR} \
   --with-qt-dir=${QTDIR} \
   --with-qt-includes=${QTDIR}/include \
   --with-qt-libraries=${QTDIR}/lib \
   $DEBUG_AUTOTOOL_OPT

}

package() {
   msg "Packaging - $pkgname-$pkgver"

   cd ${srcdir}/applications/tde-style-lipstik
   make  DESTDIR="$pkgdir" install

}
 
