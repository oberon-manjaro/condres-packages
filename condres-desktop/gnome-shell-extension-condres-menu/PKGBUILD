# Maintainer: Condres OS team <info@codelinsoft.it>

pkgname=gnome-shell-extension-condres-menu
pkgver=1.2.4_all
pkgrel=8
epoch=1
pkgdesc="The official applications menu for Condres OS."
arch=('i686' 'x86_64')
url="http://codelinsoft.com/"
license=('GPL-2+')
depends=('gnome-shell')
options=('!emptydirs' '!strip')
install=${pkgname}.install
source=('data.tar.xz'
        'condres_logo_menu.tar.gz')
md5sums=('SKIP'
	 'SKIP')

package() {
  msg2 "Extracting the data.tar.xz..."
  bsdtar -xf data.tar.xz -C "$pkgdir/"
  bsdtar -xf condres_logo_menu.tar.gz 
  cp -rv "$srcdir"/condres_logo_menu/logo_condres_mini.svg "$pkgdir/usr/share/gnome-shell/extensions/condres-menu@codelinsoft.com/logo_condres_mini.svg"
  rm -rf "$pkgdir/usr/share/gnome-shell/extensions/condres-menu@codelinsoft.com/zorin-icon-symbolic.svg"
  mv "$pkgdir/usr/share/gnome-shell/extensions/condres-menu@codelinsoft.com/logo_condres_mini.svg" "$pkgdir/usr/share/gnome-shell/extensions/condres-menu@codelinsoft.com/zorin-icon-symbolic.svg"
}
 
