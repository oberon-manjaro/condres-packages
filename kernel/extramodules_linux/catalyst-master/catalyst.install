post_install() {
    EXTRAMODULES=extramodules-CONDRES
    depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
    echo 'In order to use catalyst module, reboot the system.'
}

post_upgrade() {
    EXTRAMODULES=extramodules-CONDRES
    depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
}

post_remove() {
    EXTRAMODULES=extramodules-CONDRES
    depmod $(cat /usr/lib/modules/$EXTRAMODULES/version)
}
